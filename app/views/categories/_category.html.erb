<li id='category-<%= category.id %>'>
  <span><%= link_to category.name, category %></span>
  <% if logged_in? && current_user.admin? %>
    | <%= link_to t('.edit'), edit_category_path(category) %>
    | <%= link_to t('.delete'), category, method: :delete, data: { confirm: t('.sure') } %>
  <% end %>
</li>
