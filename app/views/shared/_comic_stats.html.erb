<div>
  <%= t '.status' %>
  <%= @comic.status.capitalize %>
</div>
<div class='stats'>
  <strong id='follows' class='stat'>
    <%= @comic.follows.count %>
  </strong>
  <%= t '.followers' %>
</div>
<div>
  <% if logged_in? %>
    <%= render 'comics/follow_form' %>
  <% end %>
</div>
<div>
  <%= t '.rating', rate: @comic.average_ratings.to_i %>
  <span><%= t '.count_rate', count: @comic.rates.count %></span>
</div>
<div>
  <% if logged_in? %>
    <%= current_user.rating?(@comic) ? t('.rate_again') : t('.rate') %>
    <%= render 'comics/rate_form' %>
  <% else %>
    <%= link_to t('.log_in'), login_path %>
  <% end %>
</div>
