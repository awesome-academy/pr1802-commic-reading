<% provide :title, t('.following') %>
<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1><%= @user.name %></h1>
      <span><%= link_to t('.view'), @user %></span>
    </section>
    <section class='stats'>
      <%= render 'shared/user_stats' %>
    </section>
  </aside>
  <div class='col-md-8'>
    <h3><%= t '.following' %></h3>
    <ul class='users follow'>
      <%= render @comics %>
    </ul>
  </div>
</div>
